<Page
    x:Class="ElectronZurnal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectronZurnal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация" Grid.Row="1" FontSize="32" FontFamily="Comic Sans MS" HorizontalAlignment="Center"/>
        <TextBox x:ConnectionId='2' x:Name="Login" Grid.Row="2" HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="24" PlaceholderText="Логин" MinWidth="150" MaxLength="20"/>
        <PasswordBox x:ConnectionId='3' x:Name="Password" Grid.Row="3" HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="24" PlaceholderText="Пароль" MinWidth="150" MaxLength="20"/>
        <Button x:ConnectionId='4' x:Name="Authen" Content="Авторизация" Grid.Row="4" HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="24"                     />

    </Grid>
</Page>

